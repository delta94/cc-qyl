{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "dist",
      "public/js",
      "public/css"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "watch": [
      "src/",
      "scss/",
      "public/index.html"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json scss html"
  }
  